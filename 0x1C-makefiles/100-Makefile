CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc
SRC = school.c main.c
NAME = school
RM = rm -f
OBJ = $(SRC:.c=.o)

.PHONY: all clean fclean re oclean

all: m.h $(NAME)
	$(NAME): $(OBJ)
	$(CC) $(OBJ)  -o $(NAME)
clean:
	$(RM) $(NAME) *~ .*~
oclean: 
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all


ifndef $(wildcard m.h)
$(error m.h not found)
endif
