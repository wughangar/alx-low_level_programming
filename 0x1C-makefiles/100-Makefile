CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc
SRC = school.c main.c
NAME = school
RM = rm -f
OBJ = $(SRC:.c=.o)

all: $(NAME)
	$(NAME): $(OBJ)
	$(CC) $(OBJ)  -o $(NAME) $(CFLAGS)
clean:
	$(RM) $(NAME) *~ .*~
oclean: 
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all

.PHONY: all clean fclean re oclean

ifndef $(wildcard m.h)
$(error m.h not found)
endif
